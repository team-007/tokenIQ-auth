                <StackLayout class="card-layout">
                    <Label class="h2" text="{{ user_balance.offer_name }}" />
                    <Label class="body" textWrap="true" text="{{ user_balance.Amount }}" />
                </StackLayout>
            </Card:CardView>
        </StackLayout>
    </ScrollView>

