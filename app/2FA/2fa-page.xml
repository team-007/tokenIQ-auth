<Page loaded="pageLoaded" class="page" actionBarHidden="true" xmlns="http://www.nativescript.org/tns.xsd">
    <FlexboxLayout class="page">
        <StackLayout class="form">
            <Image class="logo" src="~/images/logo.png"/>
            <StackLayout class="input-field">
                <TextField text="{{ twofacode }}" class="input" keyboardType="number" hint="Verification Code" autocorrect="false" autocapitalizationType="none"/>
            </StackLayout>

            <Button text="Verify" tap="{{ verify }}" class="btn btn-primary m-t-20"/>
            <ActivityIndicator busy="{{ isLoading }}" />

        </StackLayout>
    </FlexboxLayout>
</Page>
